<h1><%= @post.title %></h1>

<div class="row">
    <div class='col-md-8'>
        <p><%= @post.body %></p>
            <% if @summary %>
                <%= link_to "Summary", topic_post_summary_path(@topic, @post), class: "btn btn-success" %>
            <% elsif @post.summary == nil && policy(@post).edit? %>
                <%= link_to "Add Summary", new_topic_post_summary_path(@topic, @post), class: 'btn btn-success' %>
            <% end %>
            </div>
    <div class='col-md-4'>
        <% if policy(@post).edit? %>
            <%= link_to "Edit", edit_topic_post_path(@topic,@post), class: "btn btn-sucess" %>
        <% end %>
     
    </div>
</div>
