<%= form_for [topic] do |f| %>
    <% if topic.errors.any? %>
        <div class="alert alert-danger">
            <% if topic.errors.count == 1 %>
                <h4> There is one error. </h4>
            <% else %>
                <h4> There are <%= pluralize(topic.errors.count, "error") %>.</h4>
            <% end %>
            <ul>
                <% topic.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <%= form_group_tag(topic.errors[:name]) do %>
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', placeholder: "Enter topic name" %>
    <% end %>
    <%= form_group_tag(topic.errors[:description]) do %>
        <%= f.label :description %>
        <%= f.text_area :description, rows: 8, class: 'form-control', placeholder: "Enter description of topic" %>
    <% end %>
    <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
    </div>
<% end %>